<DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Je vote !</title>
        <link rel="stylesheet" href="style/vote.css" />
    </head>
<body>

    <header>
        <h1>Mes notes attribu√©es</h1>
        <a href="/index">Accueil</a>
    </header>

<div class="all">
    <%
        for(var i=0; i<liste.length; i++) {
            if(liste[i].valide == true){
                %>
                    <div class="ligne">
                        <p class="name"><%= liste[i].nom_prof %></p>
                        <form method="post" action="/valider">
                            <input type="hidden" value="<%= liste[i].nom_prof %>" name="prof" />

                            <input type="radio" name="vote" value="1" id="1" />
                            <label for="1">1</label>
                            <input type="radio" name="vote" value="2" id="2" />
                            <label for="2">2</label>
                            <input type="radio" name="vote" value="3" id="3"/>
                            <label for="3">3</label>
                            <input type="radio" name="vote" value="4" id="4" />
                            <label for="4">4</label>
                            <input type="radio" name="vote" value="5" id="5" />
                            <label for="5">5</label>

                            <input type="submit" value="Noter ce professeur" class="valider"/>
                        </form>
                    </div>
                <%
            }
            else{
                %>
                    <div class="ligne">
                        <p class="name"><%= liste[i].nom_prof %></p>
                        <div class="progress-bar">
                            <progress max="5" value="<%= liste[i].note %>"></progress>
                            <p class="note_attribuee"><%= liste[i].note %>/5</p>
                        </div>
                    </div>
                <%
            }
        }
    %>
</div>    

</body>
</html>